<h1>Listing squares</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @squares.each do |square| %>
  <tr>
    <td><%= square.id %></td>
    <td><%= square.name %></td>
    <% square.lines.each do |line| %>
      <td><%= line.name %></td>
    <% end %>
    <td><%= link_to 'Show', square %></td>
    <td><%= link_to 'Edit', edit_square_path(square) %></td>
    <td><%= link_to 'Destroy', square, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

